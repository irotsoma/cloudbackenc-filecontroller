{{#layout}}{{#title}}User Details{{/title}}
<div class="jumbotron"><h1>User Details</h1></div>
<div class="container">
    <table class="table">
        <tr>
            <td>
                Username:
            </td>
            <td>
                {{username}}
            </td>
        </tr>
        <tr>
            <td>
                Email:
            </td>
            <td>
                {{email}}
            </td>
        </tr>
        <tr>
            <td>
                <table class="table table-sm">
                    <thead>
                    <tr>
                        <th scope="col">Roles</th>
                    </tr>
                    </thead>
                    <tbody>
                    {{#userRoles}}
                        <tr>
                            <td>{{.}}</td>
                        </tr>
                    {{/userRoles}}
                    </tbody>
                </table>
            </td>
        </tr>
    </table>

</div>
{{/layout}}